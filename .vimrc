set number

syntax on

set lines=50 columns=125

"highligh Normal guibg=#a8a9bd

"color setting
"color torte

" No incremental search
set noincsearch

" No backup required
set nobackup

" Not vi compatible. Mainly for file-name completions
set nocompatible

" autowrite: "on" saves a lot of trouble
set autowrite

" Setting autoindent on.
set ai

" Show matching braces
set showmatch

" Store last 50 commands
set history=50

set ruler

" Highlight the searched strings
set hlsearch

" ?
set shiftwidth=3

" Set tab stop to 4.
set ts=3

" Replace tab by spaces
set expandtab

" Search options
set smartcase
set ignorecase

